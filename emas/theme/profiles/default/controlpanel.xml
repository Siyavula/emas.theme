<?xml version="1.0"?>
<object
    name="portal_controlpanel"
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    i18n:domain="slc.quickchangenote"
    purge="False">

    <configlet
        title="Emas Settings"
        action_id="emas"
        appId="emas.theme" 
        category="Products"
        condition_expr=""
        url_expr="string:${portal_url}/@@emas-settings"
        icon_expr="string:${portal_url}/maintenance_icon.png"
        visible="True"    
        i18n:attributes="title">
            <permission>Manage portal</permission>
    </configlet>
    
    <configlet
        title="Service Cost Configuration"
        action_id="emas-service-cost"
        appId="emas.theme" 
        category="Products"
        condition_expr=""
        url_expr="string:${portal_url}/@@emas-service-cost"
        icon_expr="string:${portal_url}/maintenance_icon.png"
        visible="True"    
        i18n:attributes="title">
            <permission>Manage portal</permission>
    </configlet>
    
</object>

<?xml version="1.0" encoding="UTF-8"?>
<rules
    xmlns="http://namespaces.plone.org/diazo"
    xmlns:css="http://namespaces.plone.org/diazo/css"
    xmlns:xsl="http://www.w3.org/1999/XSL/Transform">

    <!-- The default theme, used for standard Plone web pages -->
    <theme href="theme.html" css:if-content="#visual-portal-wrapper" />

    <!-- Rules applying to a standard Plone web page -->
    <rules css:if-content="#visual-portal-wrapper">

        <!-- Add meta tags -->
        <drop theme="/html/head/meta" />
        <after content="/html/head/meta" theme-children="/html/head" />

        <!-- Copy style, script and link tags in the order they appear in the content -->
        <after
            content="/html/head/style | /html/head/script | /html/head/link"
            theme-children="/html/head"
            />

        <drop theme="/html/head/style" />
        <drop theme="/html/head/script" />

        <replace
            css:content="#portal-personaltools-wrapper"
            css:theme="#personaltools"
            />

        <drop content="//div[@id='plone-document-byline']" />
        <drop css:content="div.searchSection" />
        <drop css:content="h1.documentFirstHeading" if-path="/Plone/maths"/>
        <drop css:content="h1.documentFirstHeading" if-path="/"/>


        <replace theme="//h1[@id='sitetitlebottom']//a">
            <h1 id="sitetitlebottom" class="sitetitle"><a><xsl:attribute name="href"><xsl:value-of select="//a[id='portal-logo']/@href"/></xsl:attribute><xsl:if test="contains(//title/text(), 'Maths')">Maths</xsl:if><xsl:if test="contains(//title/text(), 'Science')">Science</xsl:if></a></h1>
        </replace>
        <replace theme="//h2[@id='belowtitle']">
            <h2 id="belowtitle" class="sitetitle"><xsl:if test="contains(//title/text(), 'Maths')">Excel in Mathematics</xsl:if><xsl:if test="contains(//title/text(), 'Science')">Excel in Science</xsl:if></h2>
        </replace>

        <!-- Copy over the id/class attributes on the body tag.
             This is important for per-section styling -->
        <merge attributes="class" css:content="body" css:theme="body" />
        <copy attributes="id dir" css:content="body" css:theme="body" />
        <copy attributes="href" css:content="#portal-logo" css:theme="#sitetitletop a" />

        <!-- site title -->
        <replace css:theme="#sitetitle">
            <h1 id="sitetitle"><xsl:value-of select="//a[@id='portal-logo']/@title"/></h1>
        </replace>

        <replace css:theme="#globalnav" css:content="#portal-globalnav"/>

        <merge attributes="class href" css:theme=".navback" css:content=".listingBar a.previous" css:if-content=".listingBar a.previous"/>
        <merge attributes="class href" css:theme=".navforward" css:content=".listingBar a.next" css:if-content=".listingBar a.next"/>
        <merge attributes="href" css:theme=".navtoc" css:content="#portal-logo" />


        <!-- Content -->
        <replace css:content-children="#content" css:theme-children="#content" />

        <!-- Copy annotator viewlet -->
        <after css:theme-children="body" css:content="div.annotator-help-panel"/>
        <after css:theme-children="body" css:content="a.annotator-help-trigger"/>

    </rules>

</rules>

		  \psline[linestyle=dashed](-0.2,0)(-2,3)
		  \uput[dr](-1.8,3){C}
		  \psline[linestyle=dashed](-0.2,0)(-2,-3)
		  \uput[ur](-1.8,-3){C}
		
		  \psline[linestyle=dashed](0,0)(2,2.2)

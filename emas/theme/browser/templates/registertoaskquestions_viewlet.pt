<div id="register-to-ask-questions-viewlet-container"
    tal:condition="view/can_show"
    tal:define="is_registered view/is_registered">
    <div tal:condition="is_registered">
        You are registered to ask questions until: <span tal:replace="view/expirydate">expirydate</span>
    </div>
    <a href="#" class="payservice-overlay"
        tal:condition="not:is_registered" 
        tal:attributes="href string:${context/@@plone_portal_state/portal_url}/@@register-to-ask-questions">
        Register to ask questions
    </a>
</div>
